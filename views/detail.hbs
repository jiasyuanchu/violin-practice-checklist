<form action="/items/{{ item._id }}?_method=DELETE" method="POST" style="display: inline;"></form>

  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if item.isDone }} checked {{/if}} disabled>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ item.name }}" disabled>
    <a class="btn btn-success" href="/items/{{ item._id }}/edit">edit</a>
    <button class="btn btn-danger" type="submit">delete</button>
  </div>
</form>